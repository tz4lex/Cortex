{
  "name": "cortex",
  "productName": "Cortex",
  "version": "1.0.3",
  "description": "Cortex Browser",
  "main": "main.js",
  "author": "tz4lex",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "npx electron-builder"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.34.0",
    "cross-fetch": "^3.1.8",
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.cortex.browser",
    "productName": "Cortex",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "tz4lex",
        "repo": "Cortex"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cortex"
    }
  }
}
